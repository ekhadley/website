[Unit]
Description=Flask Application for ekhadley.net
After=network.target

[Service]
Type=simple
User=ek
WorkingDirectory=/home/ek/wgmn/website
Environment="PATH=/home/ek/.local/bin:/usr/bin"
EnvironmentFile=/etc/website.env
ExecStart=/home/ek/wgmn/website/.venv/bin/gunicorn -w 4 -b 0.0.0.0:8000 app:app
Restart=on-failure
RestartSec=5s

[Install]
WantedBy=multi-user.target
